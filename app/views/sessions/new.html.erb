<h1>Log In!</h1>

<div class="container">

    <%= form_for :sessions, url: login_path do |f| %>
      <p>
        <%=f.label :email %>
        <%=f.text_field :email %>
      </p>

      <p>
        <%=f.label :password %>
        <%=f.password_field :password %>
      </p>

      <p>
        <%= f.submit "Log In", class: 'button tiny radius' %>
      </p>
    <% end %>
</div>

<p>Don't have an account?</p>

<div class="">
<%= link_to 'Sign Up', new_user_path, method: :get %>
</div>